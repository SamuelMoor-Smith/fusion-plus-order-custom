{
  "extends": "@1inch/tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./src/types-overrides",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "ES2021"
    ],
    "target": "ES2021"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",       
  }
}
